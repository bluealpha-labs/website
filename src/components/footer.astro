---
import { Link } from './link'
import { Logo } from './logo'

const year = new Date().getFullYear()

const companyLinks = [
  { href: '/', label: 'Home' },
  { href: '/careers', label: 'Careers' },
  { href: '/referral', label: 'Referral program' }
]

// Keep order consistent with header: Case studies → Playbooks → Articles
const contentLinks = [
  { href: '/case-studies', label: 'Case studies' },
  { href: '/playbooks', label: 'Playbooks' },
  { href: '/articles', label: 'Articles' }
]

const socialLinks = [
  { href: 'https://x.com/intent/user?screen_name=BlueAlphaAI', label: 'X', target: '_blank' },
  { href: 'https://www.youtube.com/@BlueAlphaAI?sub_confirmation=1', label: 'YouTube', target: '_blank' },
  { href: 'https://www.linkedin.com/company/bluealphalabs', label: 'LinkedIn', target: '_blank' }
]

const legalLinks = [
  { href: '/privacy', label: 'Privacy policy' },
  { href: '/terms', label: 'Terms' }
]
---

<footer class='sticky bottom-0 -mt-8 bg-gray-900 px-5 pt-18 pb-12 text-white md:h-119 md:px-29 md:pt-26 md:pb-7'>
  <div
    class='grid grid-cols-1 gap-8 md:h-full md:grid-cols-[1fr_auto_auto_auto] md:grid-rows-[1fr_auto] md:gap-x-12 md:gap-y-0 lg:grid-cols-[1fr_192px_192px_192px] lg:gap-x-0'>
    <!-- Logo + tagline (left aligned) -->
    <div class='flex flex-col gap-4'>
      <Logo className='fill-white' />
      <p class='text-base font-[450] tracking-[.01em] text-gray-400'>
        Lead the AI marketing shift. Don't be left behind.
      </p>
    </div>

    <!-- Company links column (desktop: right cluster, first) -->
    <div class='hidden md:flex md:flex-col md:gap-2'>
      {
        companyLinks.map((link) => (
          <Link
            color='inverse'
            href={link.href}>
            {link.label}
          </Link>
        ))
      }
    </div>

    <!-- Content links column (desktop: right cluster, second) -->
    <div class='hidden md:flex md:flex-col md:gap-2'>
      {
        contentLinks.map((link) => (
          <Link
            color='inverse'
            href={link.href}>
            {link.label}
          </Link>
        ))
      }
    </div>

    <!-- Social links - desktop only (right cluster, third) -->
    <div class='hidden md:flex md:flex-col md:gap-2'>
      {
        socialLinks.map((link) => (
          <Link
            color='inverse'
            href={link.href}
            target={link.target}>
            {link.label}
          </Link>
        ))
      }
    </div>

    <!-- Mobile-only: two columns (left: company + social; right: content) -->
    <div class='grid grid-cols-2 gap-8 md:hidden'>
      <div class='flex flex-col gap-2'>
        {
          companyLinks.map((link) => (
            <Link
              color='inverse'
              href={link.href}>
              {link.label}
            </Link>
          ))
        }
        <div class='mt-4 flex flex-col gap-2'>
          {
            socialLinks.map((link) => (
              <Link
                color='inverse'
                href={link.href}
                target={link.target}>
                {link.label}
              </Link>
            ))
          }
        </div>
      </div>
      <div class='flex flex-col gap-2'>
        {
          contentLinks.map((link) => (
            <Link
              color='inverse'
              href={link.href}>
              {link.label}
            </Link>
          ))
        }
      </div>
    </div>

    <!-- Copyright -->
    <p class='text-sm font-[450] tracking-[.01em] text-gray-400 md:self-end'>
      © BlueAlpha {year}. All rights reserved
    </p>

    <!-- Privacy link -->
    <div class='hidden md:flex md:flex-col md:gap-2 md:self-end'>
      <Link
        variant='simple'
        color='inverseMuted'
        href={legalLinks[0].href}>
        {legalLinks[0].label}
      </Link>
    </div>

    <!-- Terms link -->
    <div class='hidden md:flex md:flex-col md:gap-2 md:self-end'>
      <Link
        variant='simple'
        color='inverseMuted'
        href={legalLinks[1].href}>
        {legalLinks[1].label}
      </Link>
    </div>

    <!-- Legal links mobile -->
    <div class='flex gap-6 md:hidden'>
      {
        legalLinks.map((link) => (
          <Link
            variant='simple'
            color='inverseMuted'
            href={link.href}>
            {link.label}
          </Link>
        ))
      }
    </div>
  </div>
</footer>
