---
import { Link } from './link'
import { Logo } from './logo'

const year = new Date().getFullYear()

const navLinks = [
  { href: '/', label: 'Home' },
  // { href: '/about', label: 'About' },
  { href: '/case-studies', label: 'Case studies' },
  { href: '/referral-program', label: 'Referral Program' }
]

const socialLinks = [
  { href: 'https://x.com/intent/user?screen_name=BlueAlphaAI', label: 'X', target: '_blank' },
  { href: 'https://www.youtube.com/@BlueAlphaAI?sub_confirmation=1', label: 'YouTube', target: '_blank' },
  { href: 'https://www.linkedin.com/company/bluealphalabs', label: 'LinkedIn', target: '_blank' }
]

const legalLinks = [
  { href: '/privacy', label: 'Privacy policy' },
  { href: '/terms', label: 'Terms' }
]
---

<footer class='sticky bottom-0 -mt-8 bg-stone-900 px-5 pt-18 pb-12 text-white md:h-119 md:px-29 md:pt-26 md:pb-7'>
  <div
    class='grid grid-cols-1 gap-8 md:h-full md:grid-cols-[1fr_auto_auto] md:grid-rows-[1fr_auto] md:gap-x-12 md:gap-y-0 lg:grid-cols-[1fr_192px_192px] lg:gap-x-0'>
    <!-- Logo section -->
    <div class='flex flex-col gap-4'>
      <Logo className='fill-white' />
      <p class='text-base font-[450] tracking-[.01em] text-stone-400'>Marketing automation platform</p>
    </div>

    <!-- Nav links -->
    <div class='grid grid-cols-2 gap-14 md:block md:gap-0'>
      <div class='flex flex-col gap-2'>
        {
          navLinks.map((link) => (
            <Link
              color='inverse'
              href={link.href}>
              {link.label}
            </Link>
          ))
        }
      </div>

      <!-- Social links - mobile only in grid -->
      <div class='flex flex-col gap-2 md:hidden'>
        {
          socialLinks.map((link) => (
            <Link
              color='inverse'
              href={link.href}
              target={link.target}>
              {link.label}
            </Link>
          ))
        }
      </div>
    </div>

    <!-- Social links - desktop only -->
    <div class='hidden md:flex md:flex-col md:gap-2'>
      {
        socialLinks.map((link) => (
          <Link
            color='inverse'
            href={link.href}
            target={link.target}>
            {link.label}
          </Link>
        ))
      }
    </div>

    <!-- Copyright -->
    <p class='text-sm font-[450] tracking-[.01em] text-stone-400 md:self-end'>
      Â© BlueAlpha {year}. All rights reserved
    </p>

    <!-- Privacy link -->
    <div class='hidden md:flex md:flex-col md:gap-2 md:self-end'>
      <Link
        variant='simple'
        color='inverseMuted'
        href={legalLinks[0].href}>
        {legalLinks[0].label}
      </Link>
    </div>

    <!-- Terms link -->
    <div class='hidden md:flex md:flex-col md:gap-2 md:self-end'>
      <Link
        variant='simple'
        color='inverseMuted'
        href={legalLinks[1].href}>
        {legalLinks[1].label}
      </Link>
    </div>

    <!-- Legal links mobile -->
    <div class='flex gap-6 md:hidden'>
      {
        legalLinks.map((link) => (
          <Link
            variant='simple'
            color='inverseMuted'
            href={link.href}>
            {link.label}
          </Link>
        ))
      }
    </div>
  </div>
</footer>
