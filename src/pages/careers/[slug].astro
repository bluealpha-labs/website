---
import { ContentContainer } from '#components/content/content-container.tsx'
import { ContentHeaderContainer } from '#components/content/content-header/content-header-container.tsx'
import { ContentHeaderImage } from '#components/content/content-header/content-header-image.tsx'
import { ContentHeaderLabel } from '#components/content/content-header/content-header-label.tsx'
import { ContentHeaderTitle } from '#components/content/content-header/content-header-title.tsx'
import { ContentHeaderWrapper } from '#components/content/content-header/content-header-wrapper.tsx'
import { ContentHeader } from '#components/content/content-header/content-header.tsx'
import { ContentProse } from '#components/content/content-prose.tsx'
import { ContentWrapper } from '#components/content/content-wrapper.tsx'
import { departmentNames } from '#constants/career.ts'
import Layout from '#layouts/layout.astro'
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
  const collection = await getCollection('careers')
  const published = collection.filter((entry) => entry.data.status === 'published')
  return published.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }))
}

const {
  entry: { data, render }
} = Astro.props

const { Content } = await render()

const departmentName = departmentNames[data.department]
---

<Layout className='py-20'>
  <ContentHeader>
    <ContentHeaderContainer>
      <ContentHeaderWrapper>
        <ContentHeaderLabel>{departmentName}</ContentHeaderLabel>
        <ContentHeaderTitle>{data.title}</ContentHeaderTitle>
      </ContentHeaderWrapper>
      <ContentHeaderImage
        src={data.image.src}
        alt={data.title}
      />
    </ContentHeaderContainer>
  </ContentHeader>
  <ContentContainer>
    <ContentWrapper>
      <ContentProse>
        <Content />
      </ContentProse>
    </ContentWrapper>
  </ContentContainer>
</Layout>
