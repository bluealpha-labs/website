---
import { ButtonLink } from '#components/button-link.tsx'
import ContentActions from '#components/content/content-actions.astro'
import ContentDescription from '#components/content/content-description.astro'
import ContentTitle from '#components/content/content-title.astro'
import Content from '#components/content/content.astro'
import Section from './section.astro'
import { CallWithFounder } from '#components/call-with-founder.tsx'
import { Icon } from '#components/icon.tsx'
import ArrowRightIcon from '@heroicons/react/16/solid/ArrowRightIcon'
---

<Section>
  <Content>
    <ContentTitle>Take Back Control of Black-Box Metrics</ContentTitle>
    <ContentDescription>
      Break free of opaque reporting, trim CAC, and unlock revenue with auditable, real-time insight.
    </ContentDescription>
    <ContentActions>
      <CallWithFounder />
      <ButtonLink
        href='/case-studies'
        variant='outline'>
        See our case studies
        <Icon className='-me-1.5'>
          <ArrowRightIcon className='size-4' />
        </Icon>
      </ButtonLink>
    </ContentActions>
  </Content>
</Section>
